{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "importHelpers": true,
    "moduleResolution": "node",
    "noEmit": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": false
  },
  "files": ["vite.config.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
