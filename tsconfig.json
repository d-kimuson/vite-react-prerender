{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": false
  },
  "files": ["vite.config.ts"],
  "include": ["src", "@types"],
  "exclude": ["node_modules"]
}
